{
    "name": "slider",
    "title": "Photo slider",
    "author": "Paweł Golński",
    "image": "image.png",
    "assets": {
        "js": "script.php",
        "css": "style.php"
    },
    "show": {
        "backend-preview": "backend-preview.php",
        "backend-config": "backend-config.php",
        "frontend": "frontend.php"
    },
    "config" : {
        "duration" : {
            "type" : "number",
            "caption" : "Slider duration",
            "default" : "1000",
            "tab" : "Options"
        },
        "size" : {
            "type" : "options",
            "caption" : "Slider size",
            "options": {
                "boxed" : "Boxed", 
                "full-width" : "Full width", 
                "full-height" : "Full height", 
                "full" : "Fill width and height"
            },
            "default" :"boxed",
            "tab" : "Options"
        },
        "height" : {
            "type" : "text",
            "caption" : "Height",
            "default" : "400px",
            "tab" : "Options"
        },
        "layout" : {
            "type" : "options",
            "caption" : "Layout",
            "options": {
                "simple": "Simple",
                "parallax": "Parallax"
            },
            "default" :"simple",
            "tab" : "Options"
        },
        "prop" : {
            "type" : "options",
            "caption" : "Proportions",
            "options": {
                "strech" : "Strech", 
                "cut" : "Cut"
            },
            "default" :"strech",
            "tab" : "Options"
        },
        "slides" : {
            "type" : "collection",
            "tab" : "Slides",
            "default": "1",
            "components": {
                "title" : {
                    "type" : "text",
                    "caption" : "Title",
                    "default" :""
                },
                "media_id" : {
                    "type" : "media",
                    "caption" : "Image",
                    "default" : ""
                },
                "media_url" : {
                    "type" : "text",
                    "caption" : "Image URL (used if Image is unset)",
                    "default" : ""
                },
                "description" : {
                    "type" : "text",
                    "caption" : "Description",
                    "default" :""
                },
                "url" : {
                    "type" : "text",
                    "caption" : "Link URL",
                    "default" :"#"
                },
                "text_position" : {
                    "type" : "options",
                    "caption" : "Text position",
                    "default" :"left",
                    "options": {
                        "left": "Left",
                        "center": "Center",
                        "right": "Right"
                    }
                }
            }
        }
    }
}

{
    "name": "text",
    "title": "Text Box",
    "author": "Paweł Golński",
    "image": "image.png",
    "assets": {
        "js": "script.php",
        "css": "style.php"
    },
    "show": {
        "backend-preview": "backend-preview.php",
        "backend-config": "backend-config.php",
        "frontend": "frontend.php"
    },
    "config" : {
        "title" : {
            "type" : "text",
            "caption" : "Title",
            "default" :"",
            "tab" : "Content"
        },
        "title_url" : {
            "type" : "text",
            "caption" : "Title URL",
            "default" :"",
            "tab" : "Content"
        },
        "hr_after" : {
            "type" : "boolean",
            "caption" : "Show separator",
            "default" : 0,
            "tab" : "Content"
        },
        "content" : {
            "type" : "textbox",
            "caption" : "Content",
            "default" :"",
            "tab" : "Content"
        },
        "style" : {
            "type" : "options",
            "caption" : "Style",
            "options" : {
                "default":"default", 
                "colored":"colored"
            },
            "tab" : "Style"
        },
        "font_size" : {
            "type" : "options",
            "caption" : "Font size",
            "options" : {
                "0.5em": "0.5em",
                "0.8em": "0.8em",
                "1em": "1em",
                "1.2em": "1.2em",
                "1.4em": "1.4em",
                "1.6em": "1.6em",
                "1.7em": "1.7em"
            },
            "tab" : "Style"
        },
        "align" : {
            "type" : "options",
            "caption" : "Text align",
            "options" : {
                "left" : "left",
                "right" : "right",
                "center" : "center",
                "justify" : "justify",
                "auto" : "auto"
            },
            "tab" : "Style"
        }
    }
